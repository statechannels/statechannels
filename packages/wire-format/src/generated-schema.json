{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Address": {
      "description": "Ethereum Address",
      "pattern": "^0x([a-fA-F0-9]{40})|0$",
      "type": "string"
    },
    "Allocation": {
      "additionalProperties": false,
      "properties": {
        "allocationType": {
          "$ref": "#/definitions/Uint8"
        },
        "amount": {
          "$ref": "#/definitions/Uint256"
        },
        "destination": {
          "$ref": "#/definitions/Bytes32"
        },
        "metadata": {
          "$ref": "#/definitions/Bytes"
        }
      },
      "required": [
        "destination",
        "amount",
        "metadata",
        "allocationType"
      ],
      "type": "object"
    },
    "Bytes": {
      "description": "Bytes",
      "pattern": "^0x([a-fA-F0-9]*)$",
      "type": "string"
    },
    "Bytes32": {
      "description": "Bytes32",
      "pattern": "^0x([a-fA-F0-9]{64})$",
      "type": "string"
    },
    "ChannelRequest": {
      "additionalProperties": false,
      "properties": {
        "channelId": {
          "type": "string"
        },
        "type": {
          "const": "GetChannel",
          "type": "string"
        }
      },
      "required": [
        "type",
        "channelId"
      ],
      "type": "object"
    },
    "CloseChannel": {
      "additionalProperties": false,
      "properties": {
        "data": {
          "additionalProperties": false,
          "properties": {
            "fundingStrategy": {
              "enum": [
                "Direct",
                "Ledger",
                "Virtual",
                "Fake",
                "Unknown"
              ],
              "type": "string"
            },
            "targetChannelId": {
              "$ref": "#/definitions/Bytes32"
            },
            "txSubmitterOrder": {
              "items": {
                "type": "number"
              },
              "type": "array"
            }
          },
          "required": [
            "targetChannelId",
            "fundingStrategy",
            "txSubmitterOrder"
          ],
          "type": "object"
        },
        "participants": {
          "items": {
            "$ref": "#/definitions/Participant"
          },
          "type": "array"
        },
        "type": {
          "const": "CloseChannel",
          "type": "string"
        }
      },
      "required": [
        "participants",
        "type",
        "data"
      ],
      "type": "object"
    },
    "CloseLedger": {
      "additionalProperties": false,
      "properties": {
        "data": {
          "additionalProperties": false,
          "properties": {
            "ledgerId": {
              "$ref": "#/definitions/Bytes32"
            }
          },
          "required": [
            "ledgerId"
          ],
          "type": "object"
        },
        "participants": {
          "items": {
            "$ref": "#/definitions/Participant"
          },
          "type": "array"
        },
        "type": {
          "const": "CloseLedger",
          "type": "string"
        }
      },
      "required": [
        "participants",
        "type",
        "data"
      ],
      "type": "object"
    },
    "FundGuarantor": {
      "additionalProperties": false,
      "properties": {
        "data": {
          "additionalProperties": false,
          "properties": {
            "guarantorId": {
              "$ref": "#/definitions/Bytes32"
            },
            "jointChannelId": {
              "$ref": "#/definitions/Bytes32"
            },
            "ledgerId": {
              "$ref": "#/definitions/Bytes32"
            }
          },
          "required": [
            "jointChannelId",
            "ledgerId",
            "guarantorId"
          ],
          "type": "object"
        },
        "participants": {
          "items": {
            "$ref": "#/definitions/Participant"
          },
          "type": "array"
        },
        "type": {
          "const": "FundGuarantor",
          "type": "string"
        }
      },
      "required": [
        "participants",
        "type",
        "data"
      ],
      "type": "object"
    },
    "FundLedger": {
      "additionalProperties": false,
      "properties": {
        "data": {
          "additionalProperties": false,
          "properties": {
            "ledgerId": {
              "$ref": "#/definitions/Bytes32"
            }
          },
          "required": [
            "ledgerId"
          ],
          "type": "object"
        },
        "participants": {
          "items": {
            "$ref": "#/definitions/Participant"
          },
          "type": "array"
        },
        "type": {
          "const": "FundLedger",
          "type": "string"
        }
      },
      "required": [
        "participants",
        "type",
        "data"
      ],
      "type": "object"
    },
    "Message": {
      "additionalProperties": false,
      "properties": {
        "data": {
          "$ref": "#/definitions/Payload"
        },
        "recipient": {
          "type": "string"
        },
        "sender": {
          "type": "string"
        }
      },
      "required": [
        "recipient",
        "data"
      ],
      "type": "object"
    },
    "Objective": {
      "anyOf": [
        {
          "$ref": "#/definitions/OpenChannel"
        },
        {
          "$ref": "#/definitions/CloseChannel"
        },
        {
          "$ref": "#/definitions/VirtuallyFund"
        },
        {
          "$ref": "#/definitions/FundGuarantor"
        },
        {
          "$ref": "#/definitions/FundLedger"
        },
        {
          "$ref": "#/definitions/CloseLedger"
        }
      ]
    },
    "OpenChannel": {
      "additionalProperties": false,
      "properties": {
        "data": {
          "additionalProperties": false,
          "properties": {
            "fundingLedgerChannelId": {
              "$ref": "#/definitions/Address"
            },
            "fundingStrategy": {
              "enum": [
                "Direct",
                "Ledger",
                "Virtual",
                "Fake",
                "Unknown"
              ],
              "type": "string"
            },
            "role": {
              "enum": [
                "app",
                "ledger"
              ],
              "type": "string"
            },
            "targetChannelId": {
              "$ref": "#/definitions/Bytes32"
            }
          },
          "required": [
            "targetChannelId",
            "fundingStrategy"
          ],
          "type": "object"
        },
        "participants": {
          "items": {
            "$ref": "#/definitions/Participant"
          },
          "type": "array"
        },
        "type": {
          "const": "OpenChannel",
          "type": "string"
        }
      },
      "required": [
        "participants",
        "type",
        "data"
      ],
      "type": "object"
    },
    "Outcome": {
      "items": {
        "$ref": "#/definitions/SingleAssetOutcome"
      },
      "type": "array"
    },
    "Participant": {
      "additionalProperties": false,
      "properties": {
        "destination": {
          "$ref": "#/definitions/Address"
        },
        "participantId": {
          "type": "string"
        },
        "signingAddress": {
          "$ref": "#/definitions/Address"
        }
      },
      "required": [
        "participantId",
        "signingAddress",
        "destination"
      ],
      "type": "object"
    },
    "Payload": {
      "additionalProperties": false,
      "properties": {
        "objectives": {
          "items": {
            "$ref": "#/definitions/Objective"
          },
          "type": "array"
        },
        "requests": {
          "items": {
            "$ref": "#/definitions/ChannelRequest"
          },
          "type": "array"
        },
        "signedStates": {
          "items": {
            "$ref": "#/definitions/SignedState"
          },
          "type": "array"
        },
        "walletVersion": {
          "type": "string"
        }
      },
      "required": [
        "walletVersion"
      ],
      "type": "object"
    },
    "SignedState": {
      "additionalProperties": false,
      "properties": {
        "appData": {
          "$ref": "#/definitions/Bytes"
        },
        "appDefinition": {
          "$ref": "#/definitions/Address"
        },
        "chainId": {
          "type": "string"
        },
        "challengeDuration": {
          "$ref": "#/definitions/Uint48"
        },
        "channelId": {
          "$ref": "#/definitions/Bytes32"
        },
        "channelNonce": {
          "$ref": "#/definitions/Uint48"
        },
        "isFinal": {
          "type": "boolean"
        },
        "outcome": {
          "$ref": "#/definitions/Outcome"
        },
        "participants": {
          "items": {
            "$ref": "#/definitions/Participant"
          },
          "type": "array"
        },
        "signatures": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "turnNum": {
          "$ref": "#/definitions/Uint48"
        }
      },
      "required": [
        "chainId",
        "participants",
        "channelNonce",
        "appDefinition",
        "challengeDuration",
        "outcome",
        "turnNum",
        "appData",
        "isFinal",
        "channelId",
        "signatures"
      ],
      "type": "object"
    },
    "SingleAssetOutcome": {
      "additionalProperties": false,
      "properties": {
        "allocations": {
          "items": {
            "$ref": "#/definitions/Allocation"
          },
          "type": "array"
        },
        "asset": {
          "$ref": "#/definitions/Address"
        },
        "metadata": {
          "$ref": "#/definitions/Bytes"
        }
      },
      "required": [
        "asset",
        "allocations",
        "metadata"
      ],
      "type": "object"
    },
    "Uint256": {
      "description": "Uint256",
      "pattern": "^0x([a-fA-F0-9]{64})$",
      "type": "string"
    },
    "Uint48": {
      "type": "number"
    },
    "Uint8": {
      "type": "number"
    },
    "VirtuallyFund": {
      "additionalProperties": false,
      "properties": {
        "data": {
          "additionalProperties": false,
          "properties": {
            "jointChannelId": {
              "$ref": "#/definitions/Bytes32"
            },
            "targetChannelId": {
              "$ref": "#/definitions/Bytes32"
            }
          },
          "required": [
            "targetChannelId",
            "jointChannelId"
          ],
          "type": "object"
        },
        "participants": {
          "items": {
            "$ref": "#/definitions/Participant"
          },
          "type": "array"
        },
        "type": {
          "const": "VirtuallyFund",
          "type": "string"
        }
      },
      "required": [
        "participants",
        "type",
        "data"
      ],
      "type": "object"
    }
  }
}