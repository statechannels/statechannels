{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "declaration": false,
    "declarationMap": false,
    "jsx": "preserve",
    "isolatedModules": true,
    "noEmit": true,
    "strict": false,
    "allowSyntheticDefaultImports": true,

    // react-script injects these fields when you run the test script
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    "src"
  ]
}
