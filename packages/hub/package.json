{
  "name": "@statechannels/hub",
  "private": true,
  "version": "0.0.1",
  "description": "nitro hub prototype",
  "main": "lib/index.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "db:drop": "dropdb server_wallet_${NODE_ENV}",
    "db:create": "createdb server_wallet_${NODE_ENV}",
    "db:migrate": "npx knex migrate:latest",
    "db:rollback": "npx knex migrate:rollback",
    "db:seed": "npx knex seed:run",
    "test:ci": "GANACHE_PORT=8505 run-s contracts:clear prettier:check server:test",
    "chain:ci:test": "yarn chain:test --all --ci",
    "chain:test": "npx ganache-then-jest --runInBand -c ./config/jest/jest.chain.config.js",
    "adjudicator-watcher:start": "node lib/wallet/adjudicator-watcher/index.js",
    "adjudicator-watcher:test": "npx ganache-then-jest --runInBand -c ./config/jest/jest.chain.config.js",
    "firebase-relay:start:sdev": "nodemon --watch 'src/**/*' -e ts,tsx --exec ts-node src/message/firebase-relay",
    "server:start": "node ./lib/app/server.js",
    "server:test": "npx jest --runInBand -c ./config/jest/jest.config.js",
    "server:watch": "nodemon --watch 'src/**/*' -e ts,tsx --exec ts-node ./src/hub/server.ts",
    "build": "npx tsc",
    "prepare": "yarn build",
    "start": "run-s server:start",
    "prestart": "yarn build && npm run db:rollback && npm run db:migrate && npm run db:seed",
    "prettier:check": "npx prettier --check 'src/**/*.{ts,tsx}'",
    "prettier:write": "npx prettier --write 'src/**/*.{ts,tsx}'",
    "contracts:clear": "rm -rf ./build/contracts",
    "contracts:deploy": "npx deploy-contracts"
  },
  "dependencies": {
    "@koa/cors": "2.2.3",
    "@statechannels/nitro-protocol": "0.0.1",
    "@statechannels/wallet": "^0.0.1",
    "async-lock": "1.2.2",
    "dotenv": "6.2.0",
    "dotenv-expand": "4.2.0",
    "firebase": "6.6.2",
    "fmg-core": "0.5.9",
    "fmg-nitro-adjudicator": "0.1.5",
    "knex": "0.20.1",
    "koa": "2.11.0",
    "koa-body": "4.1.1",
    "koa-router": "7.4.0",
    "lodash": "^4.17.15",
    "magmo-devtools": "git+https://github.com/magmo/devtools.git#v0.1.20",
    "magmo-wallet-common": "0.0.0",
    "objection": "1.6.11",
    "pg": "7.12.1"
  },
  "devDependencies": {
    "@types/async-lock": "1.1.1",
    "@types/config": "0.0.34",
    "@types/dotenv": "6.1.1",
    "@types/jest": "24.0.21",
    "@types/knex": "0.15.2",
    "@types/koa": "2.0.51",
    "@types/koa-router": "7.0.42",
    "@types/lodash": "^4.14.146",
    "@types/node": "11.15.2",
    "@types/supertest": "2.0.8",
    "babel-register": "6.26.0",
    "ganache-cli": "6.7.0",
    "jest": "24.9.0",
    "koa-bodyparser": "4.2.1",
    "node-fetch": "2.6.0",
    "nodemon": "1.19.4",
    "npm-run-all": "4.1.5",
    "prettier": "1.18.2",
    "supertest": "3.4.2",
    "truffle": "5.0.42",
    "truffle-hdwallet-provider": "1.0.17",
    "ts-jest": "24.1.0",
    "ts-lint": "4.5.1",
    "ts-node": "8.4.1",
    "tslint-config": "0.0.1",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.6.3"
  }
}
