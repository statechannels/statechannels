{
  "name": "@statechannels/devtools",
  "private": true,
  "version": "0.1.21",
  "description": "Scripts used for Magmo development processes",
  "main": "lib/src/index.js",
  "scripts": {
    "prepare": "yarn build:typescript",
    "build:typescript": "npx tsc -b",
    "lint:check": "npx eslint \"*/**/*.ts\" --cache",
    "lint:write": "npx eslint \"*/**/*.ts\" --fix",
    "precommit": "lint-staged --quiet"
  },
  "author": "Andrew Stewart",
  "license": "MIT",
  "repository": "https://github.com/magmo/devtools",
  "dependencies": {
    "chai": "4.2.0",
    "detect-port": "1.3.0",
    "dotenv": "8.1.0",
    "dotenv-expand": "5.1.0",
    "ethers": "4.0.39",
    "fs-extra": "8.1.0",
    "jest": "24.9.0",
    "loglevel": "1.6.6",
    "solc": "0.5.13",
    "yargs": "14.0.0"
  },
  "devDependencies": {
    "@types/loglevel": "1.6.3",
    "@types/tcp-port-used": "1.0.0",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.7.0",
    "@typescript-eslint/parser": "^2.8.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "ganache-cli": "6.6.0",
    "lint-staged": "9.4.1",
    "tcp-port-used": "1.0.1",
    "tree-kill": "1.2.1",
    "truffle": "5.0.37",
    "prettier": "1.18.2",
    "typescript": "3.7.2"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": "yarn lint:check"
  }
}
