{
  "name": "fmg-core",
  "version": "0.5.9",
  "description": "Force-move games core",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "scripts": {
    "prepare": "yarn build",
    "test": "jest",
    "test:ci": "yarn prettier:check && npx ganache-then-jest",
    "build": "tslint --project . && tsc",
    "prettier:check": "npx prettier --check 'src/**/*.{ts,tsx}'",
    "prettier:write": "npx prettier --write 'src/**/*.{ts,tsx}'"
  },
  "repository": "https://github.com/magmo/force-move-games/tree/master/packages/fmg-core",
  "author": "Tom Close",
  "license": "MIT",
  "dependencies": {
    "bn.js": "^4.11.8",
    "ethers": "^4.0.26",
    "sha3": "^1.2.2",
    "web3": "1.0.0-beta.37",
    "web3-eth-abi": "1.0.0-beta.37",
    "web3-eth-accounts": "1.0.0-beta.37",
    "web3-utils": "1.0.0-beta.37",
    "websocket": "^1.0.28"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/node": "^10.5.1",
    "@types/web3": "^1.0.0-beta.30",
    "dotenv": "^6.1.0",
    "ganache-cli": "^6.1.8",
    "jest": "^23.6.0",
    "magmo-devtools": "git+https://github.com/magmo/devtools.git#v0.1.11",
    "prettier": "^1.18.2",
    "truffle": "^5.0.0-next.17",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "testMatch": [
      "<rootDir>/src/**/?(*.)(spec|test).(t)s?(x)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transformIgnorePatterns": [
      "[/\\\\](node_modules|scripts)[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.json"
      }
    },
    "preset": "ts-jest"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
