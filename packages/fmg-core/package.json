{
  "name": "fmg-core",
  "version": "0.1.6",
  "description": "Force-move games core",
  "main": "./lib/src/index.js",
  "types": "./lib/src/index.d.ts",
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "scripts": {
    "migrate": "npx truffle migrate",
    "test": "npx jest --watch"
  },
  "repository": "https://github.com/magmo/force-move-games/tree/master/packages/fmg-core",
  "author": "Tom Close",
  "license": "MIT",
  "dependencies": {
    "bn.js": "^4.11.8",
    "ethers": "^4.0.12",
    "sha3": "^1.2.2",
    "web3": "^1.0.0-beta.36",
    "websocket": "^1.0.28"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.5.1",
    "@types/web3": "^1.0.0-beta.30",
    "copyfiles": "^2.0.0",
    "dotenv": "^6.1.0",
    "jest": "^23.6.0",
    "npm-run-all": "^4.1.3",
    "shx": "^0.2.2",
    "truffle": "^5.0.0-beta.1",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "testMatch": [
      "<rootDir>/src/**/?(*.)(spec|test).(t)s?(x)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\](node_modules|scripts)[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "json",
      "js",
      "jsx",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.json"
      }
    }
  }
}
