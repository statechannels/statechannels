{
  "name": "@statechannels/client-api-schema",
  "description": "JSON-RPC Schema and TypeScript typings for the State Channels Client API",
  "version": "0.3.8-alpha.0",
  "author": "snario <liam@l4v.io>",
  "contributors": [
    "Alex Gap <alex.gap@consensys.net>",
    "Liam Horne <liam@l4v.io>"
  ],
  "dependencies": {
    "@types/node": "^14.11.2",
    "ajv": "6.11.0",
    "jest": "^25.1.0"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "7.9.2",
    "@types/eslint": "6.1.7",
    "@types/eslint-plugin-prettier": "2.2.0",
    "@typescript-eslint/eslint-plugin": "2.18.0",
    "@typescript-eslint/parser": "2.18.0",
    "eslint": "6.8.0",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-tsdoc": "0.2.6",
    "lint-staged": "10.0.4",
    "ts-json-schema-generator": "0.60.0",
    "typescript": "^4.0.3"
  },
  "files": [
    "lib/src"
  ],
  "keywords": [
    "client api",
    "ethereum",
    "jsonrpc",
    "state channels"
  ],
  "license": "MIT",
  "lint-staged": {
    "index.ts": "yarn lint:check --max-warnings=0"
  },
  "main": "lib/src/index.js",
  "repository": "statechannels/monorepo/blob/master/packages/client-api-schema",
  "scripts": {
    "prepare": "yarn build:generate-schema && yarn build:typescript && yarn generate-api",
    "build:generate-schema": "yarn ts-json-schema-generator --path='src/types.ts' > src/generated-schema.json",
    "build:typescript": "rm -rf lib; yarn tsc -b",
    "generate-api": "yarn api-extractor run --local",
    "lint:check": "eslint \"src/**/*.ts\" --cache",
    "lint:write": "eslint \"src/**/*.ts\" --fix",
    "test": "jest",
    "test:ci": "yarn test --ci --runInBand"
  }
}
