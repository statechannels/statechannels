{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://statechannels.org/schemas/channel-result.json",
  "definitions": {
    "ChannelResult": {
      "type": "object",
      "properties": {
        "participants": {
          "type": "array",
          "items": {
            "$ref": "definitions.json#/definitions/Participant"
          },
          "title": "participants"
        },
        "funding": {
          "type": "array",
          "items": {
            "token": {
              "$ref": "definitions.json#/definitions/AddressOrEmpty",
              "title": "token"
            },
            "amount": {
              "$ref": "definitions.json#/definitions/Amount",
              "title": "amount"
            }
          }
        },
        "allocations": {
          "type": "array",
          "items": {
            "$ref": "definitions.json#/definitions/Allocation"
          },
          "title": "allocations"
        },
        "appDefinition": {
          "$ref": "definitions.json#/definitions/Address",
          "title": "appDefinition"
        },
        "appData": {
          "type": "string",
          "title": "appData"
        },
        "status": {
          "type": "string",
          "const": "opening",
          "enum": ["proposed", "opening", "funding", "running", "closing", "closed"]
        },
        "turnNum": {
          "type": "string",
          "const": "0x00"
        }
      },
      "required": [
        "allocations",
        "appData",
        "funding",
        "appDefinition",
        "participants",
        "status",
        "turnNum"
      ]
    }
  }
}
