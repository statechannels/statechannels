{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://statechannels.org/schemas/push-message.json",
  "definitions": {
    "PushMessageResult": {
      "properties": {
        "success": {"const": true}
      },
      "required": ["success"]
    },

    "PushMessageParams": {
      "type": "object",
      "properties": {
        "recipient": {"type": "string"},
        "sender": {"type": "string"},
        "data": {"type": "object"}
      },
      "required": ["recipient", "sender", "data"]
    }
  }
}
