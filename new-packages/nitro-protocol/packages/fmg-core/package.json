{
  "name": "fmg-core",
  "version": "0.0.8",
  "description": "Force-move games core",
  "main": "./lib/src/index.js",
  "types": "./lib/src/index.d.ts",
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "scripts": {
    "clean": "shx rm -rf lib",
    "copy_contracts": "copyfiles './contracts/**/*' './migrations/**/*' ./lib",
    "pre_build": "run-s copy_contracts",
    "build": "run-s clean copy_contracts && tsc",
    "test": "npm run build && (cd lib && ../node_modules/.bin/truffle test)"
  },
  "repository": "https://github.com/magmo/force-move-games/tree/master/packages/fmg-core",
  "author": "Tom Close",
  "license": "MIT",
  "dependencies": {
    "sha3": "^1.2.2",
    "web3-utils": "^1.0.0-beta.30"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.5.1",
    "@types/web3": "^1.0.0-beta.30",
    "copyfiles": "^2.0.0",
    "npm-run-all": "^4.1.3",
    "shx": "^0.2.2",
    "truffle-core": "^4.1.11",
    "typescript": "^2.9.2"
  }
}
